extends layouts/layout-player.pug
include ./_includes/mixins/_player-current.pug
block vars
  -
    let title ="Polskie Radio Katowice - player";
    let baseurl= "";
    let current = {
      name: "Varius Manx, Kasia Stankiewicz",
      title: "Kot bez ogona",
      image: "okladka_nuta.svg",
    }
mixin shortcut(time, title, icon, isvertical)
  .player-shortcut(class= isvertical)
    .pause
      span.icon.is-large
        i.fas.fa-stop
    .player-shortcut-icon-wrapper
      span.icon.is-large
        img(src=  baseurl + "assets/files/img/" + icon +".svg")
    .player-shortcut-info-wrapper
      span.player-shortcut-time= time
      span.player-shortcut-title= title
      span.player-shortcut-call-to-action s≈Çuchaj
block content
  +current(current)
  section.player-shortcut-group
    .player-shortcuts
      h2.shortcuts-group-title 
        span Serwisy
      .columns.is-mobile
        .column.is-4
          +shortcut('','Pogoda','ico-pogoda', 'shortcut-is-vertical-mobile')(class='fas fa-cloud fa-2x')
        .column.is-4
          +shortcut('','Auto Radio','ico-autoradio', 'shortcut-is-vertical-mobile')(class='fas fa-car fa-2x')
        .column.is-4
          +shortcut('','Informacje','ico-informacje', 'shortcut-is-vertical-mobile')(class='fas fa-info fa-2x')
    .player-shortcuts
      h2.shortcuts-group-title
        span Podcasty
      .carousel.carousel-animated.carousel-animate-slide
        .carousel-container
          .carousel-item.is-active
            +shortcut('','Nazwa audycji', 'ico-audycje')(class='fas fa-music fa-2x')
          .carousel-item
            +shortcut('','Nazwa audycji 2', 'ico-audycje')(class='fas fa-music fa-2x')
          .carousel-item
            +shortcut('','Nazwa audycji 3', 'ico-audycje')(class='fas fa-music fa-2x')
        .carousel-navigation.is-overlay
          .carousel-nav-left
            i.fa.fa-chevron-left(aria-hidden="true")
          .carousel-nav-right
            i.fa.fa-chevron-right(aria-hidden="true")
