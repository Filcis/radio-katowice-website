extends ../layouts/static-layout.pug
block vars
  -
    let title ="Playlista";
    let baseurl= "../";
block main-content
  h1.page-title.is-borderless Co by≈Ço grane w Radiu Katowice
  .day-selection
    .level
      .level-item
        .figure.icon
          i.fa-arrow-left.fas
      .level-item      
        span.current-day DZISIAJ
      .level-item
        .figure.icon
          i.fa-arrow-right.fas
  // tabela 1
  table.table
    thead
      tr
        th(colspan=2) 
          span.icon.is-large
            i.fas.fa-clock
          | 17:00
