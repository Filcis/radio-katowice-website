mixin shortcuts(data)
  .columns.is-mobile.is-marginless.is-gapless
    each i in data
      .column.is-4.has-text-centered
        a.player-shortcut(href=i.href)
          .player-shortcut-time
            if i.hour
              p.player-hour.is-size-6= i.hour
            else
              p.player-hour.time-info.is-size-6 LIVE
          if i.icon
            span(class="icon is-medium icon-" + i.icon)
              i(class="fas fa-2x fa-" + i.icon)
          else if i.image
            .cover(style= "background-image: url('assets/files/img/" + i.image + "')")
          .player-shortcut-title
            p= i.title
          .player-shortcut-call-to-action 
