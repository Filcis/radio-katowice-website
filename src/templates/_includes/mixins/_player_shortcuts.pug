mixin shortcuts(data, isPopup)
  .columns.is-mobile.permanent-shortcuts
    each i in data
      .column.is-4.has-text-centered
        a.player-shortcut(href=i.href)
          .player-shortcut-top(class="icon-" + i.icon)
            .player-shortcut-time
              if i.hour
                p.is-size-7= i.hour
              else
                p.player-hour.time-info.is-size-6 LIVE
            if i.icon
              span(class="icon is-medium")
                i(class="fas fa-2x fa-" + i.icon)
          .player-shortcut-bottom
            .player-shortcut-title
              p= i.title
            .player-shortcut-call-to-action 
