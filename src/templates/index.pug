extends layouts/layout.pug
block vars
  -
    let title ="Polskie Radio Katowice";
    let bodyClass ="home"
    let baseurl= "";
block content 
  section.hero#homepage-hero
    .hero-body
      .container
        .columns
          .column.is-8
            .on-air-wrapper
              include _includes/_on_air.pug
          .column.is-4.is-hidden-mobile
            .musicians-illustration
                img(src= baseurl + "assets/files/img/grajki.svg")
  section.main-content
    .container
      section.player-shortcuts
        include _includes/_shortcuts.pug
      .columns.is-desktop.is-gapless
        .column.is-9-desktop
          section.recent-news
            include _includes/_recent_news.pug
        .column.is-3-desktop
          aside.sidebar
            include _includes/_sidebar.pug
  section.recent-video.section
    include _includes/_video_carousel.pug
  section.section
    .container
      include _includes/_secondary_news.pug
  section.section
    .container
      .columns
        .column.is-6
          include _includes/_highlights.pug
        .column.is-6
          include _includes/_events-list.pug
  section.section.partners
    include _includes/_patrons_carousel.pug
